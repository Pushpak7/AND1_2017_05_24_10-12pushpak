<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pushpak.constraintlayout.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imgMan"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="54dp"
        android:cropToPadding="false"
        android:padding="20dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/imgSpidy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="134dp"
        android:contentDescription="earthGo"
        android:onClick="onSpidy"
        android:text="Spidy"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintLeft_toRightOf="@+id/imgIronman"
        app:layout_constraintRight_toLeftOf="@+id/imgAntman"
        app:layout_constraintTop_toBottomOf="@+id/imgMan" />

    <Button
        android:id="@+id/imgIronman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="134dp"
        android:onClick="onIronman"
        android:text="IRONMAN"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMan" />

    <Button
        android:id="@+id/imgAntman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="134dp"
        android:onClick="onAntman"
        android:text="ANTMAN"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMan" />
</android.support.constraint.ConstraintLayout>
